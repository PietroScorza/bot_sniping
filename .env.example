# ===========================================
# Performance & Retry Configuration
# ===========================================

# Reconnection settings
RECONNECT_DELAY_MS=1000
MAX_RECONNECT_ATTEMPTS=10

# Transaction confirmation timeout (ms)
TX_CONFIRMATION_TIMEOUT_MS=30000

# Compute unit limit for transactions
COMPUTE_UNIT_LIMIT=400000

# Priority fee in micro-lamports per compute unit
PRIORITY_FEE_MICRO_LAMPORTS=10000

# ===========================================
# Logging Configuration
# ===========================================

# Log level: trace, debug, info, warn, error
RUST_LOG=info,solana_copytrading_bot=debug

# Enable JSON logging (for production)
LOG_JSON=false

# ===========================================
# State Persistence (Optional)
# ===========================================

# Redis URL for persistent state (optional)
# Leave empty to use in-memory state
REDIS_URL=

# State backup interval (seconds)
STATE_BACKUP_INTERVAL_SECS=60
